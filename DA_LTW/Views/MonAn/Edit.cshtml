@model DA_LTW.Models.MONAN

@{
    ViewBag.Title = "Chỉnh sửa món ăn";
    Layout = "~/Views/Shared/_LayoutDoAn.cshtml";
}
<link href="~/Content/css/css_edit.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Chỉnh sửa món ăn</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "MonAn", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.MaMon)

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold text-muted">Mã món</label>
                            @Html.EditorFor(model => model.MaMon, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.MaMon, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold text-muted">Tên món</label>
                            @Html.EditorFor(model => model.TenMon, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên món ăn" } })
                            @Html.ValidationMessageFor(model => model.TenMon, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold text-muted">Giá thành</label>
                            <div class="input-group">
                                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập giá món ăn" } })
                                <span class="input-group-text">VNĐ</span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold text-muted">Đơn vị tính</label>
                            @Html.EditorFor(model => model.DonViTinh, new { htmlAttributes = new { @class = "form-control", placeholder = "Đơn vị tính (phần, đĩa...)" } })
                            @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold text-muted">Trạng thái</label>
                            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold text-muted">Mã loại</label>
                            @Html.EditorFor(model => model.MaLoai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold text-muted">Mô tả</label>
                    @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = "3", placeholder = "Mô tả về món ăn" })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger small" })
                </div>

                <!-- Phần upload ảnh mới -->
                <div class="form-group mb-4">
                    <label class="form-label fw-bold">Hình ảnh món ăn</label>

                    <!-- Hiển thị ảnh hiện tại nếu có -->
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <div class="mb-3">
                            <p class="text-muted small">Ảnh hiện tại:</p>
                            <img src="@Url.Content(Model.HinhAnh)" alt="Ảnh món ăn" class="img-thumbnail" style="max-height: 200px;">
                        </div>
                    }

                    <div class="file-upload-area">
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                        <div class="form-text">Chọn hình ảnh từ máy tính của bạn (jpg, png, gif)</div>
                        @Html.HiddenFor(model => model.HinhAnh)
                    </div>

                    <!-- Xem trước ảnh -->
                    <div id="imagePreview" class="mt-3" style="display: none;">
                        <p class="text-muted small">Xem trước:</p>
                        <img id="preview" class="img-thumbnail" style="max-height: 200px;">
                    </div>

                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>