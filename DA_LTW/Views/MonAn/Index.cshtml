@model IEnumerable<DA_LTW.Models.MONAN>

@{
    ViewBag.Title = "Danh sách món ăn";
    Layout = "~/Views/Shared/_LayoutDoAn.cshtml";
}

<h2 class="mb-4">Danh sách món ăn</h2>

<p>
    @Html.ActionLink("➕ Thêm món mới", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="border-radius: 10px;">

                <!-- Nếu bạn có hình món ăn -->
                @*@if (!string.IsNullOrEmpty(item.HinhAnh))
                {
                    <img src="@item.HinhAnh" class="card-img-top" style="height: 180px; object-fit: cover;" />
                }
                else
                {
                    <img src="/Content/no-image.png" class="card-img-top" style="height: 180px; object-fit: cover;" />
                }*@

                <div class="card-body">
                    <h5 class="card-title">@item.TenMon</h5>

                    <p class="card-text text-muted mb-1">
                        Giá: <strong>@string.Format("{0:N0} VNĐ", item.Gia)</strong>
                    </p>

                    <p class="card-text">
                        Trạng thái:
                        <span class="badge @(item.TrangThai == "Còn món" ? "bg-success" : "bg-secondary")">
                            @(item.TrangThai == "Còn món" ? "Còn món" : "Hết")
                        </span>
                    </p>

                    <div class="d-flex justify-content-between mt-3">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaMon }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaMon }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaMon }, new { @class = "btn btn-danger btn-sm" })
                    </div>

                </div>
            </div>
        </div>
    }
</div>
