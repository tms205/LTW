@model DA_LTW.Models.MONAN

    @{
        ViewBag.Title = "Thêm món ăn mới";
    Layout = "~/Views/Shared/_LayoutDoAn.cshtml";
    }

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-primary">Thêm món ăn mới</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "MonAn")">Danh sách món ăn</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 create-monan-card">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Thông tin món ăn mới
                    </h4>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("Create", "MonAn", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Mã món</label>
                                    @Html.EditorFor(model => model.MaMon, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nhập mã món" } })
                                    @Html.ValidationMessageFor(model => model.MaMon, "", new { @class = "text-danger small" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Tên món</label>
                                    @Html.EditorFor(model => model.TenMon, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nhập tên món ăn" } })
                                    @Html.ValidationMessageFor(model => model.TenMon, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Giá thành</label>
                                    <div class="input-group">
                                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "0", type = "number" } })
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger small" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Đơn vị tính</label>
                                    @Html.EditorFor(model => model.DonViTinh, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Ví dụ: phần, đĩa, bát..." } })
                                    @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label fw-bold">Mô tả</label>
                            @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = 5 })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Hình ảnh món ăn</label>
                            <input type="file" name="fileUpload" class="form-control" accept="image/*" />
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Trạng thái</label>
                                    @Html.DropDownListFor(model => model.TrangThai,
                                        new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Còn món", Value = "Còn món" },
                                            new SelectListItem { Text = "Hết món", Value = "Hết món" }
                                        },
                                        "Chọn trạng thái",
                                        new { @class = "form-control form-control-lg" }
                                    )
                                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger small" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Mã loại món ăn</label>
                                    @Html.EditorFor(model => model.MaLoai, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nhập mã loại" } })
                                    @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <div class="d-flex justify-content-between align-items-center">
                                @Html.ActionLink("← Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-save me-2"></i>Thêm món ăn
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/css/css_create.css" rel="stylesheet" />